@page "/auth/logout"
@using CleanUps.MAUI.Shared.Services.Interfaces
@inject IAccessService _accessService
@inject NavigationManager _navigationManager

@code {
    protected override async Task OnInitializedAsync()
    {
        await _accessService.ClearUserSessionAsync();
        
        // Use forceLoad: false to ensure the navigation triggers LocationChanged event
        _navigationManager.NavigateTo("/auth/login", forceLoad: false);
    }
}
