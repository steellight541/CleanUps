@page "/"

@using CleanUps.MAUI.Shared.Services;

@inject IFormFactor FormFactor
@inject IAccessService _accessService
@inject NavigationManager _navigationManager
@inject NavigationManager NavManager

<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="title">CLEANUP MONTENEGRO</div>
    <div class="subtitle">United for a Cleaner Montenegro since 2017</div>
    
    <div class="description">
        Cleanup Montenegro is a network of organizations and civic movements dedicated to 
           preventing new plastic pollution and cleaning up existing waste across Montenegro. 
        Together, we empower, educate, and empower people to make a difference. In addition, 
        we collect data to inform authorities and the public about the sources of waste pollution
    </div>
    
    <img class="main-image" src="_content/CleanUps.MAUI.Shared/images/home/people_image.jpg" alt="Cleanup Montenegro volunteers" />
    
    <a href="/about" class="about-button">About us</a>
    
    <div class="social-icons">
        <a href="https://zerowastemontenegro.me/contact/" target="_blank" rel="noopener">
            <img src="_content/CleanUps.MAUI.Shared/images/home/mail_icon.jpg" alt="Contact" />
        </a>
        <a href="https://www.instagram.com/zero.waste.montenegro/" target="_blank" rel="noopener">
            <img src="_content/CleanUps.MAUI.Shared/images/home/instagram_icon.jpg" alt="Instagram" />
        </a>
        <a href="https://cleanupmontenegro.me/en/" target="_blank" rel="noopener">
            <img src="_content/CleanUps.MAUI.Shared/images/home/website_icon.jpg" alt="Website" />
        </a>
    </div>
</div>

@code { 
    #region Variables: Computed Properties

    /// <summary>
    /// Gets the current form factor (e.g., Desktop, Mobile, Tablet) from the platform-specific FormFactor service.
    /// Used to display the device type to the user on the home page.
    /// </summary>
    private string factor => FormFactor.GetFormFactor();

    /// <summary>
    /// Gets the current operating system platform (e.g., Windows, Android, iOS) from the platform-specific FormFactor service.
    /// Used to display the platform information to the user on the home page.
    /// </summary>
    private string platform => FormFactor.GetPlatform();
    #endregion

    #region Methods: Lifecycle Methods

    /// <summary>
    /// Initializes the component by checking authentication status.
    /// </summary>
    /// <returns>A task representing the asynchronous initialization operation.</returns>
    protected override async Task OnInitializedAsync()
    {

    }

    #endregion
}
